# Example environment variables for CBraMod
# Copy this file to .env and modify the values as needed

# Environment setting
CBRAMOD_ENV=development

# Data paths
DATA_ROOT=/data/cbramod
MODEL_ROOT=/models/cbramod
LOG_ROOT=/logs/cbramod
RESULTS_ROOT=/results/cbramod
CACHE_ROOT=/cache/cbramod

# # AWS Configuration (for deployment)
# AWS_REGION=eu-central-1
# AWS_S3_BUCKET=cbramod-data
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Database Configuration (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/cbramod
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=cbramod
# DATABASE_USER=cbramod_user
# DATABASE_PASSWORD=your_db_password_here

# Experiment Tracking
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=cbramod-experiments
WANDB_ENTITY=your_wandb_entity

# # Model Registry (if using MLflow)
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=cbramod

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# GPU Configuration
CUDA_VISIBLE_DEVICES=0,1,2,3
NVIDIA_VISIBLE_DEVICES=all

# Performance
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development settings
DEBUG=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false